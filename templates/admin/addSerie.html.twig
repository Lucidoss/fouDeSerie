{% extends 'base.html.twig' %}

{% block title %}Ajouter une série
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	{{ form_row(form.titre) }}
	{{ form_row(form.resume) }}
	{{ form_row(form.duree) }}
	{{ form_row(form.premiereDiffusion) }}
	{{ form_row(form.image) }}
	<span class="text-danger" id="erreur"></span>
    {{ form_row(form.genres) }}
    <button type="submit" id="submit" disabled="true">Ajouter la série</button>
	{{ form_end(form) }}

{% endblock %}
{% block javascript %}
<script src="/js/validForm.js"></script>
<script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>
<script src="/js/select.js"></script>
{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet">
{% endblock %}