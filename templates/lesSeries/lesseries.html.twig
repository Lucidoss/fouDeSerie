{% extends 'base.html.twig' %}


{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<h1>Les series de Fou de Séries ?</h1>
		<h1>Il y a
			{{ nombreSeries.nombre }}
			series omggg </h1>
			<ul>
				{% for series in lesSeries %}
					<h2>Titre<br>{{ series.titre }}</h2>
					<p>Resumé<br>{{ series.resume }}</p>
					<p>Premiere diffusion<br>{{ series.premiereDiffusion }}</p>
					<p>Durée par épisode<br>{{ series.duree }}
						minutes</p>
					<img src="{{series.image}}" style="width:90vh">
				{% endfor %}
			</ul>
		</div>
	{% endblock %}
